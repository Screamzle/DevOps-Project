pipeline {
    agent any
    stages {
        stage('Setup') {
	        steps {
	    	    sh "bash jenkins/setup.sh"
            }
        }
        stage('Testing') {
	        steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
	    	        sh "bash jenkins/test.sh"
                }
            }
        }
        stage('Build') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Screamzle/DevOps-Project']]])
		        sh "bash jenkins/build.sh"
            }
        }
	    stage('Network') {
	        steps {
	    	    sh "if ! docker network inspect my-network > /dev/null 2>&1; then docker network create my-network; fi" 
            }
        }
        stage('Deploy') {
            steps {
                sh "bash jenkins/deploy.sh"
            }
        }
    }
}